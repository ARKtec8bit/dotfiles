[colors]
;background = ${xrdb:color0:#222}
background = #90073642
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #eee8d5
foreground-alt = #b58900
primary = #ffb52a
secondary = #e60053
alert = #d30102

[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30
offset-x = 0%
offset-y = 0%
radius = 2
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

dim-value = 0.6

line-size = 2
line-color = #f00

border-size = 2
border-bottom-size = 2
border-color = #30002b36

padding-left = 3
padding-right = 3

module-margin-left = 2
module-margin-right = 2

font-0 = fixed:pixelsize=11;1
font-1 = unifont:fontformat=truetype:size=11:antialias=false;0
font-2 = siji:pixelsize=9;1
font-3 = fontawesome:pixelsize=9
font-4 = "Symbola:pixelsize=12;1"

modules-left =  i3 
modules-center = player-moc
modules-right = xwindow cpu memory temperature battery backlight-acpi date


tray-position = right
;tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = i3

;override-redirect = true


scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
format-prefix = "â›§ "
format-prefix-foreground =  ${colors.foreground-alt}
